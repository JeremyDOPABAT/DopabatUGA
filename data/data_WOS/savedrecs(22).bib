@article{ ISI:000502802300054,
Author = {Yip, King Yau and Ho, Kin On and Yu, King Yiu and Chen, Yang and Zhang,
   Wei and Kasahara, S. and Mizukami, Y. and Shibauchi, T. and Matsuda, Y.
